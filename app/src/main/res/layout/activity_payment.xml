<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".PaymentAct">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="BELOW ARE SERVICE PACKAGE!!! CHOOSE A PACKAGE YOU WANT AND CHOOSE HOW TO MAKE PAYMENT!!!"
        android:textAlignment="center"
        android:textColor="#090909"
        android:textSize="14dp"
        android:textStyle="bold"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="PAINTING"
       android:paddingTop="50dp"
       android:textColor="#090909"
       android:textSize="20dp"
       android:textAlignment="center"
       android:textStyle="bold"
       />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/painting"
        android:id="@+id/paintingPrice"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R1000"
        android:textColor="#090909"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RENOVATIONS"
        android:paddingTop="50dp"
        android:textColor="#090909"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/renovationPrice"
        android:layout_width="398dp"
        android:layout_height="501dp"
        android:src="@drawable/homerenovationteam" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R13 000"
        android:paddingTop="50dp"
        android:textColor="#090909"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Building"
        android:paddingTop="50dp"
        android:textColor="#090909"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/buildingPrice"
        android:layout_width="398dp"
        android:layout_height="501dp"
        android:src="@drawable/build" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R35 000"
        android:paddingTop="50dp"
        android:textColor="#090909"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"/>




</LinearLayout>

</ScrollView>